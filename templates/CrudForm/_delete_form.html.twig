<form method="post" action="{{ path(app.request.get('_route')|split('_')[0]~'_delete', {'id': entity.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
    <button id="btn-delete" class="btn btn-red">Delete</button>
</form>
